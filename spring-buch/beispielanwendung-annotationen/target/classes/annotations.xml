		<context:include-filter type="aspectj"
			expression="de.spring_buch.jpadao..*DAO" />
		<context:include-filter type="regex"
			expression="de\.spring_buch\.businessprocess.*Process" />
	</context:component-scan -->
	<context:component-scan base-package="de.spring_buch" />
</beans>