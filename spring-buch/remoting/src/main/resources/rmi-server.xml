<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="datasource"
		class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:res:springbuchhsqldb" />
		<property name="username" value="sa" />
		<property name="password" value="" />
	</bean>
	<bean id="kundeDAO" class="springjdbcdao.KundeDAO">
		<property name="dataSource" ref="datasource" />
	</bean>
	<bean id="kundeDAORMI"
		class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="kundeDAO" />
		<property name="service" ref="kundeDAO" />
		<property name="serviceInterface" value="dao.IKundeDAO" />
	</bean>
	<bean id="bestellungDAO" class="springjdbcdao.BestellungDAO">
		<property name="dataSource" ref="datasource" />
		<property name="kundeDAO" ref="kundeDAO" />
		<property name="wareDAO" ref="wareDAO" />
	</bean>
	<bean id="bestellungDAORMI"
		class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="bestellungDAO" />
		<property name="service" ref="bestellungDAO" />
		<property name="serviceInterface" value="dao.IBestellungDAO" />
	</bean>
	<bean id="wareDAO" class="springjdbcdao.WareDAO">
		<property name="dataSource" ref="datasource" />
	</bean>
	<bean id="wareDAORMI"
		class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="wareDAO" />
		<property name="service" ref="wareDAO" />
		<property name="serviceInterface" value="dao.IWareDAO" />
	</bean>
	<bean id="bestellung"
		class="businessprocess.BestellungBusinessProcess">
		<property name="bestellungDAO" ref="bestellungDAO" />
		<property name="kundeDAO" ref="kundeDAO" />
		<property name="wareDAO" ref="wareDAO" />
	</bean>
	<bean id="bestellungRMI"
		class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="bestellung" />
		<property name="service" ref="bestellung" />
		<property name="serviceInterface"
			value="businessprocess.IBestellungBusinessProcess" />
	</bean>
</beans>